DATABASE_URL="your_database_url_here"
SHADOW_DATABASE_URL="your_shadow_database_url_here"

# Serveur
PORT=8000
NODE_ENV=development

# JWT
JWT_SECRET="your_jwt_secret_here"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_here"
JWT_REFRESH_EXPIRES_IN="7d"

# CORS - Domaines autorisés (séparés par des virgules)
ALLOWED_ORIGINS="your_allowed_origins_here"

# Email
SMTP_HOST="your_smtp_host_here"
SMTP_PORT=587
SMTP_USERNAME="your_smtp_username_here"
SMTP_PASSWORD="your_smtp_password_here"
CONTACT_EMAIL="your_contact_email_here"

# Upload de fichiers
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,image/gif,application/pdf"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX=5

# Logs
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Cache (optionnel)
REDIS_URL="redis://localhost:6379"
CACHE_TTL=3600

# Render Configuration (pour le déploiement)
RENDER_EXTERNAL_URL=""

# Développement
DEV_ADMIN_EMAIL="admin@portfolio.com"
DEV_ADMIN_PASSWORD="Admin123!"


# GitHub API
GITHUB_TOKEN="your_github_token_here"

DOMAIN="http://localhost:8000"
