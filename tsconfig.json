{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "allowJs": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      // "@/controllers/*": ["src/controllers/*"],
      // "@/middleware/*": ["src/middleware/*"],
      // "@/routes/*": ["src/routes/*"],
      // "@/services/*": ["src/services/*"],
      // "@/types/*": ["src/types/*"],
      // "@/utils/*": ["src/utils/*"],
      // "@/config/*": ["src/config/*"],
      // "@/prisma/*": ["prisma/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}